
<%- include("partials/header") -%>

<h3>Compose Post</h3>

<form class="composeTitle" action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input type="text" class="form-control" name="postTitle" id="postTitle" placeholder="Post Title">
    </div>
    <div class="form-group">
        <label for="postContent">Post</label>
        <textarea class="form-control" name="postContent" id="postContent" rows="7"></textarea>
    </div>

    <button type="submit" class="btn btn-dark submit-button" name="button" >Submit Post</button>
</form>

<%- include("partials/footer") -%>